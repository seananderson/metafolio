#!/usr/bin/Rscript

library(knitr)

render_markdown(strict = FALSE)

opts_chunk$set(fig.align='center', cache=TRUE, echo=FALSE, message=FALSE, autodep=TRUE, 
fig.path='figure/', fig.width=5, par=TRUE)

opts_chunk$set(warning=FALSE, message=FALSE, comment=NA, tidy=FALSE, 
refresh=TRUE)

#knit_hooks$set(par=function(before, options, envir){
