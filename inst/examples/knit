#    par(mar=c(4,4,.1,.1), cex.lab=.95, cex.axis=.9, mgp=c(2,.7,0), tcl=-.3)
#})

## verbose compile
opts_knit$set(progress = TRUE, verbose = TRUE)
 
#options(xtable.print.comment=FALSE)
#options(xtable.type = 'latex', table.placement="H")

opts_chunk$set(dev = 'pdf')

# library(metafolio)
# or for rapid development:
metafolio_files <-  list.files(path = "../../R/")
for(i in 1:length(metafolio_files)){
  source(paste("../..//R/", metafolio_files[i], sep = ""));rm(i)}

knit("salmonport.Rmd")

